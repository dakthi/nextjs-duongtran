# Hero CMS Module Environment Variables
# Copy this file to .env.local and configure the values

# Database Configuration (Required)
# The Hero CMS Module uses your existing database connection
DATABASE_URL="postgresql://username:password@localhost:5432/your_database"
# Alternative for MySQL:
# DATABASE_URL="mysql://username:password@localhost:3306/your_database"

# Next.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Hero Module Specific Settings (Optional)

# Cache Configuration
HERO_CACHE_DURATION=30000  # Cache duration in milliseconds (default: 30 seconds)
HERO_ENABLE_CACHE=true     # Enable/disable caching (default: true)

# File Upload Configuration (if using image uploads)
UPLOAD_MAX_SIZE=2048000    # Maximum file size in bytes (default: 2MB)
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp,image/gif"

# Image Storage (Choose one)

# Option 1: Local Storage (Default)
HERO_IMAGE_STORAGE="local"
HERO_UPLOAD_DIR="public/uploads/hero"

# Option 2: Cloudinary
HERO_IMAGE_STORAGE="cloudinary"
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Option 3: AWS S3
HERO_IMAGE_STORAGE="s3"
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_S3_BUCKET="your-bucket-name"

# Option 4: Vercel Blob Storage
HERO_IMAGE_STORAGE="vercel"
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# Security Settings
HERO_REQUIRE_AUTH=true     # Require authentication for admin access (default: true)
HERO_ADMIN_ROLE="admin"    # Required role for hero management (default: "admin")

# Performance Settings
HERO_ENABLE_COMPRESSION=true    # Enable image compression (default: true)
HERO_COMPRESSION_QUALITY=80     # Image compression quality 1-100 (default: 80)
HERO_GENERATE_THUMBNAILS=true   # Generate thumbnail images (default: true)

# Development Settings
NODE_ENV="development"
DEBUG_HERO_MODULE=false    # Enable debug logging (development only)

# Production Settings (for deployment)
SKIP_DATABASE_DURING_BUILD=false  # Skip database calls during build (default: false)

# Optional: Analytics and Monitoring
HERO_ANALYTICS_ENABLED=false
HERO_ANALYTICS_PROVIDER="google"  # google, mixpanel, etc.

# Optional: Content Delivery Network
HERO_CDN_ENABLED=false
HERO_CDN_URL="https://cdn.yourdomain.com"

# Optional: Multi-language Support
HERO_I18N_ENABLED=false
HERO_DEFAULT_LOCALE="en"
HERO_SUPPORTED_LOCALES="en,es,fr"

# Optional: Rate Limiting
HERO_RATE_LIMIT_ENABLED=true
HERO_RATE_LIMIT_REQUESTS=100    # Requests per window
HERO_RATE_LIMIT_WINDOW=900000   # Window in milliseconds (15 minutes)

# Database Backup (Optional)
HERO_BACKUP_ENABLED=false
HERO_BACKUP_FREQUENCY="daily"   # daily, weekly, monthly
HERO_BACKUP_RETENTION_DAYS=30

# Content Moderation (Optional)
HERO_CONTENT_MODERATION=false
HERO_PROFANITY_FILTER=false

# SEO Settings
HERO_SEO_ENABLED=true
HERO_GENERATE_META_TAGS=true
HERO_GENERATE_SCHEMA_MARKUP=true

